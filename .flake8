[flake8]
max-line-length = 79
extend-ignore = E203, W503, B009, B036
# Exclude auto-generated API code from line-length checks (E501)
per-file-ignores =
    packages/fortios/hfortix_fortios/api/v2/*:E501
exclude =
    .git,
    __pycache__,
    build,
    dist,
    .venv,
    venv,
    *.egg-info,
    .dev/,
    docs/
