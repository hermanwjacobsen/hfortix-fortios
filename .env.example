# FortiGate Connection Settings
# Copy this file to .env and fill in your values
# Never commit the actual .env file to version control!

# FortiGate hostname or IP address
FORTIGATE_HOST=192.168.1.99

# API token (generate from FortiGate: System > Administrators > Create New > REST API Admin)
# Requires: "Read-Write" or "Read-Only" permissions depending on your needs
FORTIGATE_TOKEN=your_api_token_here

# Virtual Domain (use 'root' for non-VDOM setups, or specify VDOM name)
# Use False to skip VDOM parameter entirely
FORTIGATE_VDOM=root

# SSL Certificate Verification
# Set to 'false' for self-signed certificates in development/testing
# ALWAYS use 'true' in production with valid SSL certificates
FORTIGATE_VERIFY_SSL=false

# HTTPS port (optional, defaults to 443)
# Only specify if your FortiGate uses a non-standard port
# FORTIGATE_PORT=8443

# Request timeout in seconds (optional, defaults to 30)
# FORTIGATE_TIMEOUT=30

# Enable debug logging (optional, defaults to false)
# DEBUG=false
